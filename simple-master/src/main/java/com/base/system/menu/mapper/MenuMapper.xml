<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.base.system.menu.mapper.MenuMapper">

    <insert id="saveMenuInRole">
        INSERT sys_role_menu (role_id,menu_id) VALUES
        <foreach collection="menus" item="menuId" separator=",">
            (#{roleId},#{menuId})
        </foreach>
    </insert>

    <delete id="deleteMenuInRole">
        DELETE FROM sys_role_menu WHERE role_id = #{roleId}
    </delete>

    <select id="selectPathByKey" resultType="java.lang.String">
        SELECT path FROM sys_menu WHERE path_key = #{key}
    </select>

    <select id="selectByPathKey" resultType="com.base.system.menu.entity.Menu">
        SELECT * FROM sys_menu WHERE path_key = #{key}
    </select>

    <select id="selectAllMenu" resultType="com.base.system.menu.entity.Menu">
        SELECT * FROM sys_menu WHERE deleted = 0 AND hide = 0
    </select>

    <select id="selectByRole" resultType="com.base.system.menu.entity.Menu">
        SELECT
            m.*
        FROM
            sys_role_menu rm
        LEFT JOIN sys_menu m ON m.id = rm.menu_id
        WHERE
            rm.role_id = #{roleId} AND m.deleted = 0
    </select>

    <select id="selectIdByRole" resultType="java.lang.Long">
        SELECT
            rm.menu_id
        FROM
            sys_role_menu rm
        LEFT JOIN sys_menu m ON m.id = rm.menu_id
        WHERE
            rm.role_id = #{roleId} AND m.deleted = 0
    </select>

</mapper>
