<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.base.system.user.mapper.RoleMapper">

    <select id="selectAll" resultType="com.base.system.user.entity.Role">
        SELECT * FROM sys_role WHERE deleted = 0
    </select>

    <select id="selectByName" resultType="com.base.system.user.entity.Role">
        SELECT * FROM sys_role role WHERE role.deleted = 0 AND  role.name = #{name}
    </select>

</mapper>